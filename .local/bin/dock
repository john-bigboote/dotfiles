#!/bin/sh

dock="polybar conky"

[[ -z $1 ]] && {
    respawn polybar example &
    # respawn lxqt-panel &
    respawn conky &
    sleep 2
    dock hide
    exit 0
} || [[ $1 == toggle ]] && {
    # all the windows belonging to the dock must share the same state
    for process in $dock; do
        case `cat /tmp/xctl/$process` in
            (visible) dock hide;;
            (hidden) dock show;;
        esac
        break
    done
} || {
    xctl $1 $dock
}
