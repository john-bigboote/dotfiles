#!/usr/bin/env zsh

# chmod -R +x ~/.local/bin $DOTFILES/.local/bin
# cp -rP ${1:-$DOTFILES}/. ~ # The option "P" stands for "no-dereference", to preserve symlinks (Short option - BSD style, POSIX compliance)
# rm -rf ~/.git
# notify-send "dotfiles copied from $DOTFILES to $HOME"

pushd $DOTFILES
case $1 in
    (stow) stow -t ~ -R . && notify-send "stowed";;
    (unstow) stow -t ~ -D . && notify-send "unstowed";;
    (*) break;;
esac
popd
