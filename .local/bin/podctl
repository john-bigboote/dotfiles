#!/bin/sh

# docker/podman
IMG=${2:-fedora:latest}
CNT=${3:-env}

[[ $1 == create ]] && docker container create -it --name $CNT -h $CNT $IMG $DEFAULTSHELL
[[ $1 == start ]] && docker container start $CNT
[[ $1 == attach ]] && docker container attach $CNT
[[ $1 == add ]] && docker container exec -it $CNT $DEFAULTSHELL
