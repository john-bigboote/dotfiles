#!/bin/sh

# docker/podman
REGISTRY=docker.io/library
DEFAULTIMG=$USER_NAME/fedora
DEFAULTCNT=env

IMG=${2:-$DEFAULTIMG}
CNT=${3:-$DEFAULTCNT}

[[ $1 == pull ]] && \
	docker image pull $IMG && \
	docker tag $REGISTRY/$IMG $IMG && \
	docker image rm $REGISTRY/$IMG
[[ $1 == create ]] && docker container create -it --name $CNT -h $CNT $IMG $DEFAULTSHELL
[[ $1 == start ]] && docker container start $CNT
[[ $1 == attach ]] && docker container attach $CNT
[[ $1 == add ]] && docker container exec -it $CNT $DEFAULTSHELL
