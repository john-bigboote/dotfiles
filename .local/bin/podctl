#!/bin/sh

# docker/podman
IMG=${2:-$USER_NAME/fedora:latest}
CNT=${3:-env}

# # I wish this syntax were valid
# [[ $1 == {
# 	ls ]] && docker container ls -a
# 	create ]] && docker container create -it --name $CNT -h $CNT $IMG $DEFAULTSHELL
# 	fork ]] && docker container exec -it $CNT $DEFAULTSHELL
# }

# We'll have to live with this until something is done.
case $1 in
	(ls) docker container ls -a ;;
	(create) docker container create -it --name $CNT -h $CNT $IMG $DEFAULTSHELL ;;
	(fork) docker container exec -it $CNT $DEFAULTSHELL ;;
	(*) echo "$1: not found"; exit 127;;
esac